{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["jest", "auto-import"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "auto-import/auto-import": [
      2,
      {
        "rootPath": "./"
      }
    ]
  }
}
